InmortalWindow < MainWindow
  !text: tr('Configurar HP de Inmortal')
  size: 230 190
  @onEscape: self:hide()

  HorizontalSeparator
    id: separatorOne
    anchors.top: parent.top
    anchors.right: parent.right
    anchors.left: parent.left
    margin-bottom: 50

  PonerHP
    id: PonerHP
    anchors.left: parent.left
    anchors.top: separatorOne.bottom
    margin-top: 10

  HorizontalSeparator
    id: separatorThree
    anchors.right: parent.right
    anchors.left: parent.left
    anchors.top: PonerHP.bottom
    margin-bottom: 5

  QuitarHP
    id: QuitarHP
    anchors.left: parent.left
    anchors.top: separatorThree.bottom
    margin-top: 10

  HorizontalSeparator
    id: separatorTwo
    anchors.right: parent.right
    anchors.left: parent.left
    anchors.bottom: close.top
    margin-bottom: 5

  Button
    id: close
    !text: tr('Cerrar')
    color: green
    $hover:
      color: #ff2a2a
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.bottom: parent.bottom
    size: 20 20