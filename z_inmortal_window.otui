PonerHP < Panel
  image-source: /images/ui/panel_flat
  image-border: 6
  padding: 3
  size: 200 48

  Label
    id: label
    anchors.left: parent.left
    anchors.top: parent.top
    margin-left: 15
    color: #f40c0c
    text-align: center

  HorizontalSeparator
    id: separatorOne
    anchors.top: label.bottom
    anchors.right: parent.right
    anchors.left: parent.left
    margin-top: 5
    margin-bottom: 10

  HorizontalScrollBar
    id: scroll
    anchors.top: separatorOne.bottom
    anchors.right: parent.right
    anchors.left: parent.left
    margin-top: 5
    minimum: 1
    maximum: 100
    step: 1

